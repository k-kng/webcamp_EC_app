<div class="container">
  <div class="row">
    <div class="col-md-auto">
      <h5 class="bg-light">　注文履歴詳細　</h5>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div>注文情報</div>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td>注文日</td>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <td>配送先</td>
            <td>〒<%= @order.postal_code %><br><%= @order.address %><br><%= @order.name %></td>
          </tr>
          <tr>
            <td>支払方法</td>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col">
      <div>請求情報</div>
      <table class="table table-bordered">
        <tbody>
         <tr>
           <td>商品合計</td>
           <td><%= @order.itemtotal.to_s(:delimited) %></td>
         </tr>
         <tr>
           <td>配送料</td>
           <td><%= @order.postage.to_s(:delimited) %></td>
         </tr>
         <tr>
           <th>ご請求額</th>
           <td><%= @order.total_amount.to_s(:delimited) %></td>
         </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div>注文内容</div>
      <table class="table table-bordered">
        <thead>
          <tr>
            <td>商品</td>
            <td>単価(税込)</td>
            <td>個数</td>
            <td>小計</td>
          </tr>
        </thead>
        <tbody>
         <% @order_items.each do |order_item| %>
         <tr>
           <td><%= order_item.item.name %></td>
           <td><%= order_item.item.add_tax_price.to_s(:delimited) %></td>
           <td><%= order_item.amount %></td>
           <td><%= order_item.item_subtotal.to_s(:delimited) %></td>
         </tr>
         <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>