<div class="container">
 <div class="row">
  <div class="col-md-auto">
   <h5 class="bg-light">　注文履歴一覧　</h5>
  </div>
 </div>
 <div class="row">
  <div class="col">
   <table class="table table-bordered">
    <thead>
     <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>注文詳細</th>
     </tr>
    </thead>
    <tbody>
     <% @orders.each do |order| %>
     <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td>
       〒<%= order.postal_code %><br>
       <%= order.address %><br>
       <%= order.name %>
      </td>
      <td>
       <% order.order_items.each do |order_item| %>
        <%= order_item.item.name %>
       <% end %>
      </td>
      <td><%= order.total_amount.to_s(:delimited) %>円</td>
      <td><%= link_to "表示する", order_path(order), class:"btn btn-success" %></td>
     </tr>
     <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>