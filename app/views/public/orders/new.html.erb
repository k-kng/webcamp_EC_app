<div class="container">
 <div class="row">
  <div class="col-md-auto">
   <h5 class="bg-light">　注文情報入力　</h5>
  </div>
 </div>
 <div class="row">
  <%= form_with model: @order, url:confirm_orders_path, local:true do |f| %>
  <div class="col">
   <h5>支払方法</h5>
   <div>
    <%= f.radio_button :payment_method, "credit_card" %>
    <%= f.label :payment_method, "クレジットカード" %>
   </div>
   <div>
    <%= f.radio_button :payment_method, "transfer" %>
    <%= f.label :payment_method, "銀行振込" %>
   </div>
   <h5>お届け先</h5>
   <div>
    <% if current_customer.full_address %>
    <div>
     <%= radio_button_tag :select_address, 0 %>
     <%= f.label :ご自身の住所 %>
     <div><%= current_customer.full_address %></div>
    </div>
    <% end %>
   </div>
   <div>
    <%= radio_button_tag :select_address, 1 %>新規住所登録
   </div>
   <table clsaa="table">
    <tbody>
     <tr>
      <td><%= f.label :"郵便番号(ハイフンなし)" %></td>
      <td><%= f.text_field :postal_code %></td>
     </tr>
     <tr>
      <td><%= f.label :"住所" %></td>
      <td><%= f.text_field :address %></td>
     </tr>
     <tr>
      <td><%= f.label :"宛名" %></td>
      <td><%= f.text_field :name %></td>
     </tr>
    </tbody>
   </table>
  </div>
 </div>
  <div class="col"><%= f.submit "確認画面へ進む", class:"btn btn-primary" %></div>
 <% end %>
 </div>
</div>