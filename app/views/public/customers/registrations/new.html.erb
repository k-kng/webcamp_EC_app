<div class="container">
  <div class="row">
    <h5 class="bg-light">　新規会員登録　</h5>
  </div>
  <div class="row">
    <%= form_with model: @customer, url:customer_registration_path, local: true do |f| %>
    <%= render "public/customers/shared/error_messages", resource: resource %>
    <table class="table table-borderless">
      <tbody>
        <tr>
          <th>名前</th>
          <th>
            <%= f.label :"(性)" %>　<%= f.text_field :last_name, autofocus: true %>
          </th>
          <th>
            <%= f.label :"(名)" %>　<%= f.text_field :first_name, autofocus: true %>
          </th>
        </tr>
        <tr>
          <th>フリガナ</th>
          <th>
            <%= f.label :"(セイ)" %><%= f.text_field :last_name_kana, autofocus: true %>
          </th>
          <th>
            <%= f.label :"(メイ)" %><%= f.text_field :first_name_kana, autofocus: true %>
          </th>
        </tr>
        <tr>
          <th><%= f.label :"メールアドレス" %></th>
          <th><%= f.email_field :email, autofocus: true, autocomplete: "email" %></th>
        </tr>
        <tr>
          <th><%= f.label :"郵便番号(ハイフンなし)" %></th>
          <th><%= f.text_field :postal_code, autofocus: true %></th>
        </tr>
        <tr>
          <th><%= f.label :"住所" %></th>
          <th><%= f.text_field :address, autofocus: true %></th>
        </tr>
        <tr>
          <th><%= f.label :"電話番号(ハイフンなし)" %></th>
          <th><%= f.text_field :telephone_number, autofocus: true %></th>
        </tr>
        <tr>
          <th><%= f.label :"パスワード(6文字以上)" %></th>
          <th>
            <% if @minimum_password_length %>
             <%= f.password_field :password, autocomplete: "new-password" %>
            <% end %>
          </th>
        </tr>
        <tr>
          <th><%= f.label :"パスワード(確認用)" %></th>
          <th><%= f.password_field :password_confirmation, autocomplete: "new-password" %></th>
        </tr>
        <tr>
          <th></th>
          <th><%= f.submit "新規登録", class:"btn btn-success" %></th>
        </tr>
      </tbody>
    </table>
    <% end %>
  </div>
   <div class="row">
    <h5 class="bg-light">　既に登録済みの方　</h5>
   </div>
   <div class="row">
    <p>
      <%= link_to 'こちら', new_customer_session_path %>から新規登録を行ってください。
    </p>
  </div>
</div>