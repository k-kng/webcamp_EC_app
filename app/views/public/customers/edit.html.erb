<h2>会員情報編集</h2>
<%= form_with model: @customer, url:customer_path, local: true do |f| %>

  <div class="field">
    <p>名前
    <%= f.label :"(性)" %>
    <%= f.text_field :last_name, autofocus: true %>
    <%= f.label :"(名)" %>
    <%= f.text_field :first_name, autofocus: true %>
    </p>
  </div>

  <div class="field">
    <p>フリガナ
    <%= f.label :"(セイ)" %>
    <%= f.text_field :last_name_kana, autofocus: true %>
    <%= f.label :"(メイ)" %>
    <%= f.text_field :first_name_kana, autofocus: true %>
    </p>
  </div>

  <div class="field">
    <%= f.label :"郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"住所" %>
    <%= f.text_field :address, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"電話番号(ハイフンなし)" %>
    <%= f.text_field :telephone_number, autofocus: true %>
  </div>

   <div class="field">
    <%= f.label :"メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "変更を保存" %>
  </div>
<% end %>
