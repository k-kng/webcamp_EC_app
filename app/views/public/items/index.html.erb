<p></p>
<div class=container>
 <div class=row>
  <h2>商品一覧</h2>
 </div>
 <div class=row>
  <% @items.each do |item| %>
  <div class=col-3>
    <%= link_to item_path(item.id) do %>
     <%= attachment_image_tag(item, :image, size: "260x180") %><br>
    <% end %>
    <%=item.name %><br>
    ¥<%=item.price.to_s(:delimited) %>
  </div>
   <% end %>
 </div>
 <div class=row>
  <%= paginate @items %>
 </div>
</div>