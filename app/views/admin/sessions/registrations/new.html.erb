<div class="container">
  <div class="row">
    <h5 class="bg-light">　管理者新規登録　</h5>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "admin/sessions/shared/error_messages", resource: resource %>
  <div class="row">
    <div class="col-md-6 text-center">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td><%= f.label :"メールアドレス" %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td><%= f.label :"パスワード(6文字以上)" %></td>
            <td><%= f.password_field :password, autocomplete: "current-password" %></td>
          </tr>
          <tr>
            <td><%= f.label :"パスワード(確認用)" %></td>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "ログイン", class:"btn btn-primary" %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <% end %>
</div>

