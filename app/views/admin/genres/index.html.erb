<h1>ジャンル一覧・追加</h1>
<%= form_with model:@genre, local:true do |f| %>

  <h4>ジャンル名</h4>
  <%= f.text_field :name %>

  <%= f.submit '新規登録' %>

<% end %>

<h2>ジャンル</h2>
<% @genres.each do |genre| %>
  <span><%= genre.name %></span>
  <span><%= link_to "編集する", edit_admin_genre_path(genre.id) %></span>
<% end %>