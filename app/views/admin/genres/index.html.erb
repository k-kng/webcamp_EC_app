<div class="container">
  <div class="row">
    <h5 class="bg-light">　ジャンル一覧・追加　</h5>
  </div>
  <p></p>
  <div class="row">
    <div class="col-md-6">
     <%= form_with model:@genre,url:admin_genres_path, local:true do |f| %>
       ジャンル名
       <%= f.text_field :name %>
       <%= f.submit '新規登録',class:"btn btn-success" %>
     <% end %>
    </div>
  </div>
  <p></p>
  <div class="row">
    <div class="col-md-3">
     <table class="table">
       <thead>
         <tr>
           <th>ジャンル</th>
           <th></th>
         </tr>
       </thead>
       <tbody>
         <% @genres.each do |genre| %>
         <tr>
           <td>
             <%= genre.name %>
           </td>
           <td>
             <%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success"  %>
           </td>
         </tr>
         <% end %>
       </tbody>
     </table>
    </div>
  </div>
</div>