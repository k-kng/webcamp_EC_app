<div class="container">
  <div class="row">
   <h5 class="bg-light">　商品編集　</h5>
  </div>
  <div class="row">
   <%= form_with model:@item,url:admin_item_path, local:true do |f| %>
   <table class="table table-borderless">
    <tbody>
     <tr>
      <th>商品画像</th>
      <th><%= f.attachment_field :image %></th>
     </tr>
     <tr>
      <th>商品名</th>
      <th><%= f.text_field :name %></th>
     </tr>
     <tr>
      <th>商品説明</th>
      <th><%= f.text_area :introduction %></th>
     </tr>
     <tr>
      <th>ジャンル</th>
      <th><%= f.collection_select :genre_id, @genres, :id, :name %></th>
     </tr>
     <tr>
      <th>税抜価格</th>
      <th><%= f.text_field :price %></th>
     </tr>
     <tr>
      <th>販売ステータス</th>
      <th><%= f.select :is_active, {'販売中': true, '売り切れ': false}, { include_blank: '選択してください'} %></th>
     </tr>
     <tr>
      <th></th>
      <th><%= f.submit '変更保存', class:"btn btn-success" %></th>
     </tr>
    </tbody>
   </table>
  <% end %>
  </div>
 </div>