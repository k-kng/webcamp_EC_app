<div class="container">
  <div class="row">
    <h5 class="bg-light">　商品詳細　</h5>
  </div>
  <p></p>
  <div class="row">
    <div class="col-md-4">
     <%= attachment_image_tag(@item, :image, size: "300x220") %>
    </div>
    <div class="col-md-8">
     <table class="table table-borderless">
      <tbody>
       <tr>
        <th>商品名</th>
        <th><%= @item.name %></th>
       </tr>
       <tr>
        <th>商品説明</th>
        <th><%= @item.introduction %></th>
       </tr>
       <tr>
        <th>ジャンル</th>
        <th><%= @item.genre.name %></th>
       </tr>
       <tr>
        <th>税込価格<br>(税抜価格)</th>
        <th><%= @item.add_tax_price.to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>) 円</th>
       </tr>
       <tr>
        <th>販売ステータス</th>
        <th>
         <% if @item.is_active == true %>
          販売中
         <% elsif @item.is_active == false %>
          販売停止中
         <% end %>
        </th>
       </tr>
       <tr>
        <th></th>
        <th>
         <%= link_to "編集する", edit_admin_item_path(@item), class:"btn btn-success" %>
        </th>
       </tr>
      </tbody>
     </table>
    </div>
  </div>
</div>

