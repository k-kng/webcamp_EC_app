<div class="container">
 <div class="row">
  <h5 class="bg-light">　注文履歴一覧　</h5>

<table class="table">
 <thead>
  <tr>
   <th scope="col">購入日時</th>
   <th scope="col">購入者</th>
   <th scope="col">注文個数</th>
  </tr>
 </thead>
 <tbody>
  <% @orders.each do |order| %>
  <tr>
    <td><%= link_to order.created_at.strftime('%Y/%m/%d'), admin_order_path(order.id) %></td>
    <td><%= order.customer.full_name %></td>
    <td><%= order.total_count %></td>
  </tr>
  <% end %>
 </tbody>
</table>
 </div>
</div>